    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Magic Probe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/proyecto-Prog_uC.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            //"filterStderr": true,
            //"filterStdout": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "target extended-remote /dev/ttyACM0",
                    "description": "Conectarse a blackMagick Probe",
                },
                {
                    "text": "monitor swdp_scan"
                },
                {
                    "text": "attach 1"
                },
                {
                    "text": "load ${workspaceRoot}/build/proyecto-Prog_uC.elf"
                }
            ],
            "preLaunchTask": "make",
            "miDebuggerPath": "/usr/bin/arm-none-eabi-gdb"
        }
    ]
}